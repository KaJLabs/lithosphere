# Lithosphere Service Template - Environment Variables
# Copy this file to .env and configure for your environment

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL=info
# Set to true for pretty console output in development
LOG_PRETTY=true

# =============================================================================
# Service Identification
# =============================================================================
SERVICE_NAME=lithosphere-service
SERVICE_VERSION=0.1.0

# =============================================================================
# Database Configuration (optional)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/lithosphere

# =============================================================================
# External Services (optional)
# =============================================================================
# RPC_URL=http://localhost:8545

# =============================================================================
# Graceful Shutdown
# =============================================================================
# Time to wait for in-flight requests to complete (milliseconds)
SHUTDOWN_TIMEOUT_MS=30000
