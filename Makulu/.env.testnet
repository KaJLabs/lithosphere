# ============================================================================
# Lithosphere Testnet Environment Configuration
# ============================================================================
# This file contains environment variables for the Testnet deployment.
# Copy this file to .env and update the values as needed.
#
# SECURITY: Never commit actual secrets to version control!
# Use GitHub Secrets or a secrets manager for production deployments.
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# General Configuration
# ─────────────────────────────────────────────────────────────────────────────
NODE_ENV=production
ENVIRONMENT=testnet
LOG_LEVEL=info

# ─────────────────────────────────────────────────────────────────────────────
# API Service Configuration
# ─────────────────────────────────────────────────────────────────────────────
API_PORT=4000
API_HOST=0.0.0.0
GRAPHQL_PLAYGROUND=true
CORS_ORIGIN=*

# ─────────────────────────────────────────────────────────────────────────────
# Database Configuration (PostgreSQL)
# ─────────────────────────────────────────────────────────────────────────────
# Connection string for the API and Indexer services
DATABASE_URL=postgresql://lithosphere:lithosphere@postgres:5432/lithosphere

# PostgreSQL container configuration
POSTGRES_USER=lithosphere
POSTGRES_PASSWORD=lithosphere
POSTGRES_DB=lithosphere
POSTGRES_PORT=5432

# ─────────────────────────────────────────────────────────────────────────────
# Redis Configuration
# ─────────────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# ─────────────────────────────────────────────────────────────────────────────
# Blockchain RPC Configuration (Lithosphere Testnet)
# ─────────────────────────────────────────────────────────────────────────────
LITHO_RPC_URL=https://testnet-rpc.lithosphere.network
LITHO_WS_URL=wss://testnet-ws.lithosphere.network
LITHO_CHAIN_ID=61

# Alternative/Fallback RPC endpoints
LITHO_RPC_FALLBACK_1=https://testnet-rpc-backup.lithosphere.network
LITHO_RPC_FALLBACK_2=

# ─────────────────────────────────────────────────────────────────────────────
# Indexer Configuration
# ─────────────────────────────────────────────────────────────────────────────
INDEXER_START_BLOCK=0
INDEXER_BATCH_SIZE=100
INDEXER_CONFIRMATIONS=12
INDEXER_POLL_INTERVAL=3000

# ─────────────────────────────────────────────────────────────────────────────
# Contract Deployment (Optional)
# ─────────────────────────────────────────────────────────────────────────────
# DEPLOYER_PRIVATE_KEY=your-deployer-private-key
# ETHERSCAN_API_KEY=your-etherscan-api-key

# ─────────────────────────────────────────────────────────────────────────────
# Monitoring & Observability
# ─────────────────────────────────────────────────────────────────────────────
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_PORT=9091

# Grafana (if using monitoring profile)
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=lithosphere-testnet

# ─────────────────────────────────────────────────────────────────────────────
# Container Registry Configuration
# ─────────────────────────────────────────────────────────────────────────────
REGISTRY=ghcr.io
IMAGE_NAME=kajlabs/lithosphere
IMAGE_TAG=latest

# ─────────────────────────────────────────────────────────────────────────────
# TLS/SSL Configuration (if using Traefik proxy profile)
# ─────────────────────────────────────────────────────────────────────────────
# ACME_EMAIL=admin@lithosphere.network
# DOMAIN=testnet.lithosphere.network

# ─────────────────────────────────────────────────────────────────────────────
# Feature Flags
# ─────────────────────────────────────────────────────────────────────────────
CONTRACTS_ENABLED=false
MONITORING_ENABLED=true
PROXY_ENABLED=false
