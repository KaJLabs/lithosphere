{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./deploy/**/*.ts",
    "./test/hardhat/**/*.ts",
    "./typechain-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "out",
    "forge-cache"
  ]
}
